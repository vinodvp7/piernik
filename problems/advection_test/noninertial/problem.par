 $BASE_DOMAIN
    n_d = 2*128, 1
    bnd_xl = 'out'
    bnd_xr = 'out'
    bnd_yl = 'out'
    bnd_yr = 'out'
    bnd_zl = 'out'
    bnd_zr = 'out'
    xmin   = -1.
    xmax   =  1.
    ymin   = -1.
    ymax   =  1.
    zmin   = -1.
    zmax   =  1.
 /

 $MPI_BLOCKS
    allow_uneven = .true.
    allow_noncart = .true.
    dd_unif_quality = 1.1
    dd_rect_quality = 1.1
 /

 $UNITS
    units_set = "cgs"
 /

 $RESTART_CONTROL
    restart  = 'last'
    res_id   = ''
 /

 $END_CONTROL
    tend   = 1.0
    nend   = 1000
 /

 $OUTPUT_CONTROL
    problem_name ='moving_pulse'
    run_id =  'ts1'
    dt_hdf  = .1
    dt_res  = 0.0
    dt_log  = 0.001
    dt_tsl  = 0.001
    vars(1:) = 'ener', 'dens', 'velx', 'vely', 'velz', "inid"
    gdf_strict = .false.
 /

 $FLUID_NEUTRAL
    gamma = 1.67
    selfgrav = .false.
 /

 $NUMERICAL_SETUP
    cfl    = 0.7
    smalld = 1.e-5
    smallei= 1.e-5
    limiter= 'vanleer'
	! Workaround for a too big initial guess of timestep for some choices of parameters
	! ToDo: fix it
	DT_INITIAL=0.05
	DT_MAX_GROW=1.
 /

 $PROBLEM_CONTROL
    pulse_vel = 0., 0., 0. !2., -2., 2.
    pulse_size = 1., 1., 1.
 /

 $NONINERTIAL
    omega = 1.5707963267949 ! pi/2
 /

 $INTERACTIONS
 /

 $AMR
 /
