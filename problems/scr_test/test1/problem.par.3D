$BASE_DOMAIN
  n_d = 64,64,64
  nb  = 4
  bnd_xl = 'out'
  bnd_xr = 'out'
  bnd_yl = 'out'
  bnd_yr = 'out'
  bnd_zl = 'out'
  bnd_zr = 'out'
  xmin   = -1.0
  xmax   =  1.0
  ymin   =  -1.0
  ymax   =  1.0
  zmin   =  -1.0
  zmax   =  1.0
/

$MPI_BLOCKS
/

$UNITS
/

$RESTART_CONTROL
   restart  = 'last'
   res_id   = ''
   nrestart = 0
/

$END_CONTROL
  tend = 0.1
