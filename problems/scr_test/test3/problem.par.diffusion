$BASE_DOMAIN
   n_d = 256,256,1
   nb  = 4
   bnd_xl = 'out'
   bnd_xr = 'out'
   bnd_yl = 'out'
   bnd_yr = 'out'
   bnd_zl = 'out'
   bnd_zr = 'out'
   xmin   = -1.0
   xmax   =  1.0
   ymin   = -1.0
   ymax   =  1.0
   zmin   =  0.0
   zmax   =  1.0
/

$MPI_BLOCKS
/

$UNITS
/

$RESTART_CONTROL
   restart  = 'last'
   res_id   = ''
   nrestart = 0
/

$END_CONTROL
   tend = 0.4
   nend = 100000
/

$OUTPUT_CONTROL
   problem_name = 'scr'
   run_id = 'tst'
   dt_hdf = 0.2
   dt_res = 0.0
   dt_log = 0.02
   dt_tsl = 0.02
   vars(1:) = 'dens', 'ener', 'velx', 'pres', 'escr', 'xfscr', 'yfscr', 'gradpcx', 'sigma_paral', 'sigma_perp', 'magx', 'magy'
/

$FLUID_IONIZED
   gamma = 1.6667
/
$STREAMING_CR
   nscr                    = 1
   cred_min                = 100.0
   nsub                    = -1
   sigma_paral             = 10
   sigma_perp              = 1e7
   ord_pc_grad             = 2
   disable_feedback        = .true.      ! feedback to MHD gas
   disable_streaming       = .true.
   cr_sound_speed          = .true.
/
$NUMERICAL_SETUP
   cfl     = 0.5
   cfl_glm = 0.3
   smalld  = 1.e-5
   smallei = 1.e-5
   limiter = 'moncen'
   solver_str = 'riemann_unsplit'
   integration_order = 2
/

$PROBLEM_CONTROL
   !a  = 40.0
   !b  = 40.0
   !bx = 1.0
   !by = 1.0
/

$AMR
/
