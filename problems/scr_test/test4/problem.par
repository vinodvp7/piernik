$BASE_DOMAIN
  n_d = 256,1,1
  nb  = 4
  bnd_xl = 'out'
  bnd_xr = 'out'
  bnd_yl = 'out'
  bnd_yr = 'out'
  bnd_zl = 'out'
  bnd_zr = 'out'
  xmin   = -1.0
  xmax   =  1.0
  ymin   = -1.0
  ymax   =  1.0
  zmin   =  0.0
  zmax   =  1.0
/

$MPI_BLOCKS
/

$UNITS
/

$RESTART_CONTROL
   restart  = 'last'
   res_id   = ''
   nrestart = 0
/

$END_CONTROL
  tend = 0.4
  nend = 100000
/

$OUTPUT_CONTROL
   problem_name = 'scr'
   run_id = 'tst'
   dt_hdf = 0.2
   dt_res = 0.0
   dt_log = 0.02
   dt_tsl = 0.02
   vars(1:) = 'dens', 'ener', 'velx', 'pres', 'escr', 'xfscr', 'gradpcx', 'sigmax', 'magx'
/

$FLUID_IONIZED
  gamma = 1.6667
/
$STREAMING_CR
   nscr                    = 1
   vm                      = 100.0
   sigma_paral             = 10
   ord_scr_grad            = 2
   disable_feedback        = .true.      ! feedback to MHD gas
   disable_streaming       = .true.
   !disable_cr_sound       = .true.
/
$NUMERICAL_SETUP
  cfl     = 0.5
  smalld  = 1.e-5
  smallei = 1.e-5
  limiter = 'moncen'
  solver_type = 'unsplit'
  solver_str = 'riemann'
  integration_order = 2
/

$PROBLEM_CONTROL
vx = 0.0     ! Gas velocity
/

$AMR
/
