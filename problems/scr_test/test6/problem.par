$BASE_DOMAIN
  n_d = 256,1,1
  nb  = 4
  bnd_xl = 'per'
  bnd_xr = 'per'
  bnd_yl = 'out'
  bnd_yr = 'out'
  bnd_zl = 'out'
  bnd_zr = 'out'
  xmin   =  -1.0
  xmax   =  1.0
  ymin   =  -1.0
  ymax   =  1.0
  zmin   =  0.0
  zmax   =  1.0
/

$MPI_BLOCKS
/

$UNITS
/

$RESTART_CONTROL
   restart  = 'last'
   res_id   = ''
   nrestart = 0
/

$END_CONTROL
  tend = 0.05
  nend = 100000000
/

$OUTPUT_CONTROL
   problem_name = 'scr'
   run_id = 'tst'
   dt_hdf = 0.02
   dt_res = 0.0
   dt_log = 1e-20
   dt_tsl = 0.02
   vars(1:) = 'dens', 'ener', 'velx', 'pres', 'escr', 'xfscr', 'yfscr', 'zfscr', 'gradpcx', 'bdotgradpc', 'sigmax', 'gradpcy', 'gradpcz', 'magx', 'magy'
/

$FLUID_IONIZED
  gamma = 1.6667
/
$STREAMING_CR
   nscr                    = 1
   vm                      = 100.0
   sigmax                  = 0.5
   ord_scr_grad            = 4
   disable_en_source       = .false.
   disable_streaming       = .false.
   disable_feedback        = .false.      ! feedback to MHD gas 
   disable_stabilizer      = .true.  
/
$NUMERICAL_SETUP
  cfl     = 0.2
  !disallow_negatives = .false.
  smalld  = 1.e-6
  smallei = 1.e-6
  limiter = 'moncen'
  cfl_glm = 0.3
  solver_type = 'unsplit'
  solver_str = 'riemann'
  integration_order = 2
/

$PROBLEM_CONTROL
/

$AMR
/
