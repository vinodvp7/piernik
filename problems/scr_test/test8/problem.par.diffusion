$BASE_DOMAIN
  n_d = 512,512,1
  nb  = 4
  bnd_xl = 'out'
  bnd_xr = 'out'
  bnd_yl = 'out'
  bnd_yr = 'out'
  bnd_zl = 'out'
  bnd_zr = 'out'
  xmin   =  -0.5
  xmax   =  0.5
  ymin   =  -0.5
  ymax   =  0.5
  zmin   =  0.0
  zmax   =  1.0
/

$MPI_BLOCKS
/

$UNITS
/

$RESTART_CONTROL
   restart  = 'last'
   res_id   = ''
   nrestart = 0
/

$END_CONTROL
  tend = 0.1
  nend = 100000000
/

$OUTPUT_CONTROL
   problem_name = 'scr'
   run_id = 'dif'
   dt_hdf = 0.02
   dt_res = 0.0
   dt_log = 0.02
   dt_tsl = 0.02
   vars(1:) = 'dens', 'ener', 'velx', 'vely' , 'pres', 'escr', 'xfscr', 'yfscr', 'magx','magy'
/

$FLUID_IONIZED
  gamma = 1.6667
/

$STREAMING_CR
   nscr                    = 1
   vmax                    = 100.0
   sigma_paral             = 10
   sigma_perp              = 1e6
   ord_pc_grad             = 4
   disable_feedback        = .false.      ! feedback to MHD gas 
   disable_streaming       = .true.  
/
$NUMERICAL_SETUP
  cfl     = 0.5
  cfl_glm = 0.3
  smalld  = 1.e-5
  smallei = 1.e-5
  limiter = 'moncen'
  solver_str = 'riemann_unsplit'
  integration_order = 2
/

$PROBLEM_CONTROL
/

$AMR
/
