$BASE_DOMAIN
  n_d = 1025,1,1
  nb  = 4
  bnd_xl = 'user'
  bnd_xr = 'user'
  bnd_yl = 'out'
  bnd_yr = 'out'
  bnd_zl = 'out'
  bnd_zr = 'out'
  xmin   =  -5.0
  xmax   =  5.0
  ymin   =  -1.0
  ymax   =  1.0
  zmin   =  0.0
  zmax   =  1.0
/

$MPI_BLOCKS
/

$UNITS
/

$RESTART_CONTROL
   restart  = 'last'
   res_id   = ''
   nrestart = 0
/

$END_CONTROL
  tend = 0.50
  nend = 100000000
/

$OUTPUT_CONTROL
   problem_name = 'scr'
   run_id = 'tst'
   dt_hdf = 0.05
   dt_res = 0.0
   dt_log = 0.01
   dt_tsl = 0.02
   vars(1:) = 'dens', 'ener', 'velx', 'pres', 'escr', 'xfscr', 'gradpcx', 'sigmax', 'magx'
/

$FLUID_IONIZED
  gamma = 1.666666667
/
$STREAMING_CR
   nscr                 = 1
   vmax                 = 100.0
   sigma_paral          = 0.5
   ord_pc_grad          = 4
   disable_streaming    = .false.
   disable_feedback     = .false.      ! feedback to MHD gas 
   cr_sound_speed       = .true.

/
$NUMERICAL_SETUP
  cfl     = 0.5
  smalld  = 1.e-6
  smallei = 1.e-6
  limiter = 'moncen'
  cfl_glm = 0.3
  solver_type = 'unsplit'
  solver_str = 'riemann'
  integration_order = 2
/

$PROBLEM_CONTROL

/

$AMR
/
